{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": ["node", "cypress"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "declaration": true
  },
  "include": ["cypress.config.ts", 
              "./cypress/support/cypress.d.ts", 
              "./index.ts"],
  "exclude": ["node_modules"]
}